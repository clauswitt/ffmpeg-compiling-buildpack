#!/bin/sh
BUILD_DIR=$1
CACHE_DIR=$2

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install ffmpeg"

mkdir -p $CACHE_DIR
cd $CACHE_DIR

mkdir -p $BUILD_DIR/bin


echo "Fetching Sources" |indent

echo "Fetching l-smash" | indent
git clone --depth 1 https://github.com/l-smash/l-smash
echo "Fetching x264" | indent
git clone --depth 1 git://git.videolan.org/x264.git
echo "Fetching fdk-aac" | indent
git clone --depth 1 git://github.com/mstorsjo/fdk-aac.git
echo "Fetching libvpx" | indent
git clone --depth 1 https://chromium.googlesource.com/webm/libvpx
echo "Fetching ffmpeg" | indent
git clone --depth 1 git://source.ffmpeg.org/ffmpeg
echo "Fetching opus" | indent
git clone https://git.xiph.org/opus.git
echo "Fetching aacgain" | indent
git clone --depth 1 https://github.com/mulx/aacgain.git

echo "Build L-SMASH" | indent

cd $CACHE_DIR/l-smash
./configure  --prefix=$BUILD_DIR
make -j $(nproc)
make install

echo "Build libx264" | indent

cd $CACHE_DIR/x264
./configure --prefix=$BUILD_DIR --enable-static
make -j 8
make install


echo "Build libfdk-aac" | indent

cd $CACHE_DIR/fdk-aac
autoreconf -fiv
./configure --prefix=$BUILD_DIR --disable-shared
make -j 8
make install

echo "Build libvpx" | indent

cd $CACHE_DIR/libvpx
./configure --prefix=$BUILD_DIR --disable-examples
make -j 8
make install

echo "Build libopus" | indent

cd $CACHE_DIR/opus
./autogen.sh
./configure --prefix=$BUILD_DIR --disable-shared
make -j 8
make install

echo "Build ffmpeg." | indent

cd $CACHE_DIR/ffmpeg
echo ./configure --extra-libs="-ldl" --extra-cflags="-I$BUILD_DIR/include" --extra-ldflags="-L$BUILD_DIR/lib" --prefix=$BUILD_DIR --enable-gpl --enable-libass  --enable-libfdk-aac --enable-libmp3lame --enable-libopus --enable-libtheora --enable-libvorbis --enable-libvpx --enable-libx264 --enable-nonfree --enable-openssl --enable-static --disable-shared \ --libdir=$BUILD_DIR/lib --extra-version=by_arnsbomedia
#make -j 8
#make install

